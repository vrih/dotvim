{
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform"],
      "initializationOptions": {}
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "initializationOptions": {}
    },
    "docker": {
      "command": "docker-langserver",
      "args": ["--stdio"],
      "filetypes": ["Dockerfile"],
      "initializationOptions": {}
    }
  },
  "codeLens.enable": true,
  "solargraph.autoformat": true,
  "solargraph.formatting": true,
  "solargraph.useBundler": true,
  "solargraph.symbols": true,
  "solargraph.hover": true,
  "solargraph.definitions": true,
  "solargraph.rename": true,
  "solargraph.folding": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "ruby",
    "vue",
    "sh",
    "Dockerfile",
    "json"
  ],
  "yaml.format.enable": true,
  "yaml.schemas": {
    "kubernetes": "/*.yaml",
    "https://json.schemastore.org/ansible-stable-2.9": "/home/daniel/ansible/playbooks/*.yaml",
    "https://raw.githubusercontent.com/docker/compose/master/compose/config/config_schema_v3.7.json": "docker-*.yml"
  },
  "vetur.format.defaultFormatter.html": "prettier"
}
